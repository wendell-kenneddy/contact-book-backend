generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  contacts Contact[]

  @@map("users")
}

model Contact {
  id String @id @default(uuid())
  name String
  email String
  phone_number String
  created_at DateTime @default(now())
  updated_at DateTime?

  owner User @relation(fields: [owner_id], references: [id], onDelete: Cascade)
  owner_id String

  @@map("contacts")
}
